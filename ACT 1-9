# Decir que escriba un número entero.

num1 = float(input("Escribe un número entero: "))
num2 = float(input("Escribe otro número entero: "))

# Poner la operación que se vaya a hacer.
oper = input("Elige la operación (+, -, *, /): ")

# Hacer la operación que se pidio.

if oper == "+":
    resul = num1 + num2
    print(f"La suma de: {num1} + {num2} = {resul}") # Realizar la suma de los numeros.
elif oper == "-":
    resul = num1 - num2
    print(f"La resta de: {num1} - {num2} = {resul}") # Realizar la resta de los numeros.
elif oper == "*":
    resul = num1 * num2
    print(f"La multiplicación de: {num1} * {num2} = {resul}") # Realizar la multiplicación de los numeros.
elif oper == "/":
    if num2 != 0:  # Revisar si el divisor no es cero.
        resul = num1 / num2
        print(f"La división de: {num1} / {num2} = {resul}") # Realizar la división de los numeros.
    else:
        print("No se puede dividir entre cero.")
else:
    print("Elige una operación")
